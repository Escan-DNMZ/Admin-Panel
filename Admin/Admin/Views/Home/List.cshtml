@model  List<Admin.Models.kullanici>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>List</h2>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Job</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Job</td>
                <td><a class="btn btn-primary" href="/Home/Details/@item.Id">Details</a></td>
                <td><a class="btn btn-success" href="/Home/Get/@item.Id">Update</a></td>
                <td><a class="btn btn-danger" href="/Home/Delete/@item.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a class="btn btn-success" href="/Home/Create">New Guest</a>

